@model IEnumerable<Customer>
@{
    ViewData["Title"] = "List";
}

<h2>List</h2>
<div>
    <a asp-controller="Customer" asp-action="AddOrUpdate" class="btn btn-outline-secondary">Add new </a>
</div>

@if (Model.Count() <= 0)
{
    <div class="alert alert-info">
        No Record Found
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Tel</td>
                <td>Address</td>
                <td>Email</td>
                <td></td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.CustomerId</td>
                <td>@item.Name</td>
                <td>@item.Tel</td>
                <td>@item.Address</td>
                <td>@item.Email</td>
                <td>
                    <a class="btn btn-primary" asp-action="AddOrUpdate" asp-route-id="@item.CustomerId">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

}
