@model Customer
@{
    ViewData["Title"] = "AddOrUpdate";
}

<form method="post" asp-controller="Customer" asp-action="AddOrUpdate">

    <input type="hidden" asp-for="CustomerId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name" s>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="Tel"></label>
        <input type="tel" class="form-control" asp-for="Tel" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input type="text" class="form-control" asp-for="Address" />
    </div>
    <button type="submit" class="btn btn-primary" asp-controller="Customer" asp-action="AddOrUpdate">Save</button>

</form>
